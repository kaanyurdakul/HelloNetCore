@model HelloNetCore.Models.Security.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h3>Login</h3>
    <form asp-controller="Security" method="post">
        <div asp-validation-summary="All"></div>
        <input type="text" asp-for="Username" placeholder="Username" /><br />   
        <input type="password" asp-for="Password" placeholder="Username" /><br />   
        <input type="submit" value="Login" />
    </form>
</body> 
</html>
